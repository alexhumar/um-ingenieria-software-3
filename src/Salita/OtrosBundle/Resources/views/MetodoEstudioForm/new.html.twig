{% extends "::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/metodoestudio/alta.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    {% set nombrePlaceholder = 'otrosbundle.metodoEstudioForm.new.nombrePlaceholder' | trans %}

    <h3>{% trans %}otrosbundle.metodoEstudioForm.new.titulo{% endtrans %}</h3>
    <br/>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.nombre, { 'attr': { 'placeholder': nombrePlaceholder } }) }}
      </div>
      <div class="form-group col-sm-8">
        <div class="col-sm-offset-5">
          {{ form_row(form.guardar) }}
          {{ form_row(form.guardarynuevo) }}
        </div>
      </div>
    {{ form_end(form) }}

	{% for flashMessage in app.session.flashbag.get('mensaje') %}
		<div class="alert alert-success" role="alert">
			{{ flashMessage }}
		</div>
	{% endfor %}
{% endblock %}