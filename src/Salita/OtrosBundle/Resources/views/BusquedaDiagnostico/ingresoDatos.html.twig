{% extends "SalitaOtrosBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    {% set palabraPlaceholder = 'otrosbundle.busquedaDiagnostico.ingresoDatos.palabraPlaceholder' | trans %}

	<h3>{% trans %}otrosbundle.busquedaDiagnostico.ingresoDatos.titulo{% endtrans %}</h3>
    <br/>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.palabra, { 'attr': { 'placeholder': palabraPlaceholder } }) }}
      </div>
      <div class="form-group col-sm-8">
        <div class="col-sm-offset-6">
          {{ form_row(form.buscar) }}
        </div>
      </div>
    {{ form_end(form) }}
{% endblock %}