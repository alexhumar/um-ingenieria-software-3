{# Carga dinamica de localidades en base al partido seleccionado #}
<script>
  $(document).ready(function(){

    function localidadesLoader(){
        $.ajax({
		   type: "GET",
		   data: "data=" + $(this).val(),
		   url:"{{ path('localidades_de_partido') }}",
		   success: function(msg){
			            if(msg != '') {
		                    $("#modificacionDatosFiliatorios_localidad").html(msg);
		                }
		                else {
		                    $("#modificacionDatosFiliatorios_localidad").html('<em>Sin resultados</em>');
				        }
			        }
		   });
    }

    function barriosLoader(){
        $.ajax({
		   type: "GET",
		   data: "data=" + $(this).val(),
		   url:"{{ path('barrios_de_localidad') }}",
		   success: function(msg){
			            if(msg != '') {
		                    $("#modificacionDatosFiliatorios_barrio").html(msg);
		                }
		                else {
		                    $("#modificacionDatosFiliatorios_barrio").html('<em>Sin resultados</em>');
				        }
			        }
		});
    }

	$("#modificacionDatosFiliatorios_partido").change(localidadesLoader);
    $("#modificacionDatosFiliatorios_partido").click(localidadesLoader);
	$("#modificacionDatosFiliatorios_localidad").change(barriosLoader);
	$("#modificacionDatosFiliatorios_localidad").click(barriosLoader);
  });
</script>