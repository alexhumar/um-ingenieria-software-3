{% extends "SalitaPlanBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    <h3>
        {% trans %}
            planbundle.PlanProcRespForm.modif.titulo
        {% endtrans %}
    </h3>
    <br/>
    {% set periodicidadPlaceholder = 'planbundle.PlanProcRespForm.modif.periodicidadPlaceholder' | trans %}
    
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.periodicidad, { 'attr': { 'placeholder': periodicidadPlaceholder } }) }}
      </div>
      <div class="form-group col-sm-8">
        <div class="col-sm-offset-6">
          {{ form_row(form.modificar) }}
        </div>
      </div>
    {{ form_end(form) }}
{% endblock %}