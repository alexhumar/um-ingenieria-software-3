{% extends "SalitaPacienteBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/estudio/alta.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    {% set rePlaceholder = 'pacientebundle.estudioForm.new.rePlaceholder' | trans %}
    {% set npPlaceholder = 'pacientebundle.estudioForm.new.npPlaceholder' | trans %}

    <h3>{% trans %}pacientebundle.estudioForm.new.titulo{% endtrans %}</h3>
    <br/>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.resultado, { 'attr': { 'placeholder': rePlaceholder } }) }}
      </div>
      <div class="form-group col-sm-12">
        {{ form_row(form.nroProtocolo, { 'attr': { 'placeholder': npPlaceholder } }) }}
      </div>
      <div class="form-group col-sm-12">
        {{ form_row(form.metodoEstudio) }}
      </div>
      <div class="form-group col-sm-8">
        <div class="col-sm-offset-6">
          {{ form_row(form.agregar) }}
        </div>
      </div>
    {{ form_end(form) }}
{% endblock %}