{% extends "SalitaPacienteBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/antecedentes/general.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/antecedentes/personalObstetrico.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
  {% set otrosPlaceholder = 'pacientebundle.modifantecedente.otrosPlaceholder' | trans %}
  {% set gpPlaceholder = 'pacientebundle.modifPersonalObstetrico.gpPlaceholder' | trans %}
  {% set caPlaceholder = 'pacientebundle.modifPersonalObstetrico.caPlaceholder' | trans %}
  {% set ccPlaceholder = 'pacientebundle.modifPersonalObstetrico.ccPlaceholder' | trans %}
  {% set cpPlaceholder = 'pacientebundle.modifPersonalObstetrico.cpPlaceholder' | trans %}

  <h3>{% trans %}pacientebundle.modifPersonalObstetrico.modif.titulo{% endtrans %}</h3>
  <br/>
  {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group col-sm-12">
      {{ form_row(form.cirugiaPelviana) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.infertilidad) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.vih) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.cardiopatiaNefropatia) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.condicionMedicaGrave) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.gestasPrevias, { 'attr': { 'placeholder': gpPlaceholder } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.abortos, { 'attr': { 'placeholder': caPlaceholder } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.cesareas, { 'attr': { 'placeholder': ccPlaceholder } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.partos, { 'attr': { 'placeholder': cpPlaceholder } }) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.sifilis) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.tuberculosis) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.diabetes) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.hipertensionArterial) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.drogas) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.tabaquismo) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.alcoholismo) }}
    </div>
    <div class="form-group col-sm-12">
      {{ form_row(form.otros, { 'attr': { 'placeholder': otrosPlaceholder } }) }}
    </div>
    <div class="form-group col-sm-8">
      <div class="col-sm-offset-5">
        {{ form_row(form.modificar) }}
      </div>
    </div>
  {{ form_end(form) }}
{% endblock %}