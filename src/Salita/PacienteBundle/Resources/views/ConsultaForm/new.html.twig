{% extends "SalitaPacienteBundle::base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/consulta/alta.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/errores.css') }}" rel="stylesheet"/>
{% endblock %}

{% block contenido %}
    {% set oaPlaceholder = 'pacientebundle.consultaForm.new.oaPlaceholder' | trans %}

    <h3>{% trans %}pacientebundle.consultaForm.new.titulo{% endtrans %}</h3>
    <br/>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group col-sm-12">
        {{ form_row(form.otrasAnotaciones, { 'attr': { 'placeholder': oaPlaceholder } }) }}
      </div>
      <div class="form-group col-sm-8">
        <div class="col-sm-offset-6">
          {{ form_row(form.agregar) }}
        </div>
      </div>
    {{ form_end(form) }}
{% endblock %}